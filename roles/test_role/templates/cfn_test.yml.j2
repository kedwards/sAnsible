Description: Test Cloudformation Template

Transform: AWS::LanguageExtensions

Parameters:
  StackDate:
    Type: String
    Description: The date the template was generated

Resources:
{% for item in range(number_of_resources) %}
{%- set resource_name = 'NullResource' ~ loop.index %}
  {{ resource_name }}:
    Type: AWS::CloudFormation::WaitConditionHandle
{% if not loop.last %}

{% endif %}
{% endfor %}

  'Fn::ForEach::Resources':
    - ResourceStatus
    - [Success, Failure, Timeout, Unknown]
    - 'NullResource${ResourceStatus}':
        Type: AWS::CloudFormation::WaitConditionHandle

Outputs:
  TemplateDate:
    Description: The date the template was generated
    Value: !Ref StackDate
    Export:
      Name: !Sub "${AWS::StackName}-${StackDate}"
